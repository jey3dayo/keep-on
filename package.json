{
  "name": "keep-on",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": "24.13.0",
    "pnpm": "10.29.3"
  },
  "scripts": {
    "dev": "dotenvx run -- next dev --turbopack",
    "build": "dotenvx run -- next build",
    "build:cf": "dotenvx run -- opennextjs-cloudflare build",
    "start": "dotenvx run -- next start",
    "deploy": "run-s build:cf cf:deploy",
    "lint": "ultracite check",
    "format": "ultracite fix",
    "doctor": "ultracite doctor",
    "test": "dotenvx run -- vitest",
    "test:ui": "dotenvx run -- vitest --ui",
    "test:run": "dotenvx run -- vitest run",
    "test:coverage": "dotenvx run -- vitest run --coverage",
    "test:storybook": "dotenvx run -- vitest --config vitest.storybook.config.ts",
    "test:storybook:browser": "node scripts/storybook-smoke.mjs",
    "cf:deploy": "dotenvx run -- wrangler deploy",
    "cf:preview": "dotenvx run -- opennextjs-cloudflare preview",
    "cf:logs": "dotenvx run -- wrangler tail --format pretty",
    "cf:secret": "dotenvx run -- wrangler secret",
    "cf:metrics": "./scripts/get-workers-metrics.sh",
    "cf:alerts": "./scripts/setup-cloudflare-alerts.sh",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "dotenvx run -- wrangler d1 execute keep-on-db --local --file",
    "db:migrate:remote": "dotenvx run -- wrangler d1 execute keep-on-db --remote --file",
    "db:studio": "dotenvx run -- drizzle-kit studio --dialect=sqlite",
    "db:docs:generate": "tsx scripts/generate-dbml.ts",
    "db:docs:push": "dbdocs build docs/database/schema.dbml --project keep-on",
    "env:encrypt": "dotenvx encrypt",
    "env:decrypt": "dotenvx decrypt",
    "env:run": "dotenvx run --",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.37.3",
    "@hookform/resolvers": "^5.2.2",
    "@opennextjs/cloudflare": "^1.16.4",
    "@paralleldrive/cuid2": "^3.3.0",
    "@praha/byethrow": "^0.9.0",
    "@praha/error-factory": "^1.3.1",
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@sentry/cloudflare": "^10.38.0",
    "@sentry/core": "^10.38.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "0.45.1",
    "http-status-codes": "^2.3.0",
    "lucide-react": "^0.564.0",
    "next": "^16.1.6",
    "next-themes": "^0.4.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-error-boundary": "^6.1.0",
    "react-hook-form": "^7.71.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "valibot": "^1.2.0",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@cloudflare/workers-types": "^4.20260213.0",
    "@dotenvx/dotenvx": "^1.52.0",
    "@sentry/cli": "^3.2.0",
    "@storybook/addon-a11y": "^10.2.8",
    "@storybook/addon-docs": "^10.2.8",
    "@storybook/addon-themes": "^10.2.8",
    "@storybook/nextjs-vite": "^10.2.8",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/browser-playwright": "4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "agentation": "^2.2.1",
    "dbdocs": "^1.0.1",
    "drizzle-dbml-generator": "^0.10.0",
    "drizzle-kit": "^0.31.9",
    "happy-dom": "^20.6.1",
    "jsdom": "^28.0.0",
    "markdownlint-cli2": "^0.20.0",
    "npm-run-all2": "^8.0.4",
    "playwright": "^1.58.2",
    "sharp": "^0.34.5",
    "storybook": "^10.2.8",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "ultracite": "7.1.5",
    "vitest": "^4.0.18",
    "wrangler": "^4.65.0"
  }
}
